<%= form_with(model: recipe_food,url: [@recipe, @recipe_food], data: { turbo: false }) do |form| %>
  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity %>
  </div>
  <div>
    <%= form.label :food_id, style: "display: block" %>
    <%= form.select :food_id, Food.all.map { |food| [food.name, food.id] } %>
  </div>
  <div>
    <%= form.submit 'Save' %>
  </div>
<% end %>
