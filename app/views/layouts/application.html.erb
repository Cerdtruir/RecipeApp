<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <ul>
      <% if signed_in? %>
        <li><%= button_to "Sign out", destroy_user_session_path, method: :delete, data: { turbo: false } %> </li>
      <% else %>
        <li> <%= link_to "Sign in", new_user_session_path %> </li>
        <li> <%= link_to "Sign up", new_user_registration_path %> </li>
      <% end %>
      <li> <%= link_to "Recipes", recipes_path %> </li>
      <li> <%= link_to "Public recipes", public_recipes_path %> </li>
      <li> <%= link_to "Foods", foods_path %> </li>
    </ul>
    <%= yield %>
  </body>
</html>
